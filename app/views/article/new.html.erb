<h1>Create an Article</h1>
<%= form_for :article, url: article_path do |f| %>
            <p>
                        <%= f.label :Title %><br>
                        <%= f.text_field :title %>
            </p>
            <p>
                        <%= f.label :Description %><br>
                        <%= f.text_field :title %>
            </p>
            <p>
                        <%= f.label :Body %><br>
                        <%= f.text_area :text %>
            </p>
            <p>
                        <%= f.submit %>
            </p>
<% end %>
